<?xml version="1.0" encoding="utf-8"?>
<com.gillben.funview.view.SlideMenuPage xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/slideMenuPage"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    app:SlideEnable="true"
    app:SlideIntercept="true"
    app:SlideLeft="true">

    <TextView
        android:id="@+id/mainContent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ef9c6a"
        android:gravity="center"
        android:text="滑动试试看"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/menuBt"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@android:color/darker_gray"
        android:text="关闭" />


    <Button
        android:id="@+id/del"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:background="@android:color/holo_red_dark"
        android:text="删除" />

</com.gillben.funview.view.SlideMenuPage>